{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2020",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "dist/server"
  },
  "include": ["server/**/*"],
  "exclude": ["node_modules", "dist", "client", "**/*.test.ts"]
}