{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "buildCommand": "bash build-frontend-only.sh",
        "outputDirectory": "dist/public"
      }
    },
    {
      "src": "api/crypto.js",
      "use": "@vercel/node"
    },
    {
      "src": "api/news.js", 
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/crypto",
      "dest": "/api/crypto.js"
    },
    {
      "src": "/api/news",
      "dest": "/api/news.js"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}